{
    "template": "pfl_*",
    "settings": {
        "index": {
            "number_of_shards": 1,
            "number_of_replicas": 0,
            "query": {
                "default_field": "all_text"
            },
            "analysis": {
                "analyzer": {
                    "default": {
                      "type": "dutch"
                    },
                    "text_nl": {
                        "type": "custom",
                        "filter": [
                            "asciifolding",
                            "lowercase",
                            "custom_word_delimiter"
                        ],
                        "tokenizer": "standard"
                    }
                },
                "filter": {
                    "custom_word_delimiter": {
                        "type": "word_delimiter",
                        "split_on_numerics": false,
                        "generate_number_parts": true,
                        "preserve_original": true,
                        "stem_english_possesive": false,
                        "catenate_words": false,
                        "catenate_numbers": true,
                        "split_on_case_change": false,
                        "generate_word_parts": true
                    }
                }
            }
        }
    },
    "mappings": {
        "_default_": {
            "_all": {
                "enabled": false
            },
            "dynamic_templates": [
                {
                    "original_object_urls": {
                        "path_match": "meta.original_object_urls.*",
                        "mapping": {
                            "type": "keyword",
                            "index": "false"
                        }
                    }
                  },
                  {
                    "nl": {
                      "path_match": "*.nl",
                      "mapping": {
                        "type": "text",
                        "analyzer": "text_nl",
                        "fields": {
                          "raw": {
                            "type": "keyword"
                          }
                        }
                      }
                    }
                  },
                  {
                    "de": {
                      "path_match": "*.de",
                      "mapping": {
                        "type": "text",
                        "analyzer": "german",
                        "fields": {
                          "raw": {
                            "type": "keyword"
                          }
                        }
                      }
                    }
                  },
                  {
                    "fr": {
                      "path_match": "*.fr",
                      "mapping": {
                        "type": "text",
                        "analyzer": "french",
                        "fields": {
                          "raw": {
                            "type": "keyword"
                          }
                        }
                      }
                    }
                  },
                  {
                    "es": {
                      "path_match": "*.es",
                      "mapping": {
                        "type": "text",
                        "analyzer": "spanish",
                        "fields": {
                          "raw": {
                            "type": "keyword"
                          }
                        }
                      }
                    }
                  },
                  {
                    "pt": {
                      "path_match": "*.pt",
                      "mapping": {
                        "type": "text",
                        "analyzer": "portuguese",
                        "fields": {
                          "raw": {
                            "type": "keyword"
                          }
                        }
                      }
                    }
                  },
                  {
                    "en": {
                      "path_match": "*.en",
                      "mapping": {
                        "type": "text",
                        "analyzer": "english",
                        "fields": {
                          "raw": {
                            "type": "keyword"
                          }
                        }
                      }
                    }
                  },
                  {
                    "bg": {
                      "path_match": "*.bg",
                      "mapping": {
                        "type": "text",
                        "analyzer": "bulgarian",
                        "fields": {
                          "raw": {
                            "type": "keyword"
                          }
                        }
                      }
                    }
                  },
                  {
                    "cz": {
                      "path_match": "*.cz",
                      "mapping": {
                        "type": "text",
                        "analyzer": "czech",
                        "fields": {
                          "raw": {
                            "type": "keyword"
                          }
                        }
                      }
                    }
                  },
                  {
                    "dk": {
                      "path_match": "*.dk",
                      "mapping": {
                        "type": "text",
                        "analyzer": "danish",
                        "fields": {
                          "raw": {
                            "type": "keyword"
                          }
                        }
                      }
                    }
                  },
                  {
                    "fi": {
                      "path_match": "*.fi",
                      "mapping": {
                        "type": "text",
                        "analyzer": "finnish",
                        "fields": {
                          "raw": {
                            "type": "keyword"
                          }
                        }
                      }
                    }
                  },
                  {
                    "gr": {
                      "path_match": "*.gr",
                      "mapping": {
                        "type": "text",
                        "analyzer": "greek",
                        "fields": {
                          "raw": {
                            "type": "keyword"
                          }
                        }
                      }
                    }
                  },
                  {
                    "hu": {
                      "path_match": "*.hu",
                      "mapping": {
                        "type": "text",
                        "analyzer": "hungarian",
                        "fields": {
                          "raw": {
                            "type": "keyword"
                          }
                        }
                      }
                    }
                  },
                  {
                    "ie": {
                      "path_match": "*.ie",
                      "mapping": {
                        "type": "text",
                        "analyzer": "irish",
                        "fields": {
                          "raw": {
                            "type": "keyword"
                          }
                        }
                      }
                    }
                  },
                  {
                    "it": {
                      "path_match": "*.it",
                      "mapping": {
                        "type": "text",
                        "analyzer": "italian",
                        "fields": {
                          "raw": {
                            "type": "keyword"
                          }
                        }
                      }
                    }
                  },
                  {
                    "lv": {
                      "path_match": "*.lv",
                      "mapping": {
                        "type": "text",
                        "analyzer": "latvian",
                        "fields": {
                          "raw": {
                            "type": "keyword"
                          }
                        }
                      }
                    }
                  },
                  {
                    "lt": {
                      "path_match": "*.lt",
                      "mapping": {
                        "type": "text",
                        "analyzer": "lithuanian",
                        "fields": {
                          "raw": {
                            "type": "keyword"
                          }
                        }
                      }
                    }
                  },
                  {
                    "ro": {
                      "path_match": "*.ro",
                      "mapping": {
                        "type": "text",
                        "analyzer": "romanian",
                        "fields": {
                          "raw": {
                            "type": "keyword"
                          }
                        }
                      }
                    }
                  },
                  {
                    "se": {
                      "path_match": "*.se",
                      "mapping": {
                        "type": "text",
                        "analyzer": "swedish",
                        "fields": {
                          "raw": {
                            "type": "keyword"
                          }
                        }
                      }
                    }
                  }

            ],
            "properties": {
                "meta": {
                    "type": "object",
                    "properties": {
                        "source_id": {
                            "type": "keyword"
                        },
                        "collection": {
                            "type": "keyword"
                        },
                        "original_object_id": {
                            "type": "keyword"
                        },
                        "rights": {
                            "type": "keyword"
                        },
                        "original_object_urls": {
                            "type": "object"
                        },
                        "processing_started": {
                            "type": "date",
                            "format": "dateOptionalTime"
                        },
                        "processing_finished": {
                            "type": "date",
                            "format": "dateOptionalTime"
                        }
                    }
                },
                "all_text": {
                    "type": "text",
                    "analyzer": "text_nl"
                },
                "hidden": {
                  "type": "boolean"
                },
                "item": {
                  "type": "object",
                  "properties": {
                    "nameMap": {
                      "type": "object"
                    },
                    "contentMap": {
                      "type": "object"
                    },
                    "summaryMap": {
                      "type": "object"
                    },
                    "endTime": {
              				"type": "date",
              				"format": "strict_date_optional_time||epoch_millis"
              			},
                    "published": {
              				"type": "date",
              				"format": "strict_date_optional_time||epoch_millis"
              			},
                    "startTime": {
              				"type": "date",
              				"format": "strict_date_optional_time||epoch_millis"
              			},
                    "created": {
              				"type": "date",
              				"format": "strict_date_optional_time||epoch_millis"
              			},
                    "updated": {
              				"type": "date",
              				"format": "strict_date_optional_time||epoch_millis"
              			},
                    "deleted": {
              				"type": "date",
              				"format": "strict_date_optional_time||epoch_millis"
              			}
                  }
                },
                "media_urls": {
                    "properties": {
                        "url": {
                            "type": "keyword",
                            "index": "false"
                        },
                        "original_url": {
                            "type": "keyword",
                            "index": "false"
                        },
                        "width": {
                            "type": "integer"
                        },
                        "height": {
                            "type": "integer"
                        },
                        "content_type": {
                            "type": "keyword"
                        },
                        "text": {
                          "type" : "text",
                          "analyzer": "text_nl",
                          "fielddata": true
                        },
                        "label": {
                          "type" : "text",
                          "analyzer": "text_nl"
                        }
                    }
                },
                "enrichments": {
                    "type": "object",
                    "properties": {
                        "media_urls": {
                            "properties": {
                                "url": {
                                    "type": "keyword",
                                    "index": "false"
                                },
                                "original_url": {
                                    "type": "keyword",
                                    "index": "false"
                                },
                                "media_type": {
                                    "type": "keyword"
                                },
                                "content_type": {
                                    "type": "keyword"
                                },
                                "size_in_bytes": {
                                    "type": "integer"
                                },
                                "resolution": {
                                    "type": "object",
                                    "properties": {
                                        "width": {
                                            "type": "integer"
                                        },
                                        "height": {
                                            "type": "integer"
                                        },
                                        "total_pixels": {
                                            "type": "integer"
                                        }
                                    }
                                },
                                "image_format": {
                                    "type": "keyword"
                                },
                                "image_mode": {
                                    "type": "keyword"
                                },
                                "text": {
                                  "type" : "text",
                                  "analyzer": "text_nl",
                                  "fielddata": true,
                                  "copy_to": "media_url"
                                },
                                "label": {
                                  "type" : "text",
                                  "analyzer": "text_nl",
                                  "copy_to": "media_url"
                                }
                            }
                        }
                    }
                },
                "source_data": {
                    "type": "object",
                    "properties": {
                        "data": {
                            "type": "text",
                            "index": "false",
                            "doc_values": "false"
                        },
                        "content_type": {
                            "type": "keyword"
                        }
                    }
                },
                "combined_index_data": {
                    "type": "text",
                    "index": "false",
                    "doc_values": "false"
                }
            }
        }
    }
}
